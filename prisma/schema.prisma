// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator dbml {
  provider = "prisma-dbml-generator"
}

model contract {
  id      String   @id @unique @default(uuid())
  name    String
  abi_url String
  address String   @unique
  event   event[]
  method  method[]

  network_support_id Int
  network_support    network_support @relation(fields: [network_support_id], references: [id])
}

model event {
  id          Int      @id @unique @default(autoincrement())
  name        String
  params      Json?    @default("{}")
  contract_id String
  contract    contract @relation(fields: [contract_id], references: [id])
}

model method {
  id   Int    @id @unique @default(autoincrement())
  name String

  contract_id String
  contract    contract @relation(fields: [contract_id], references: [id])
}

model network_support {
  id                 Int        @id @unique @default(autoincrement())
  name               String
  icon_network_url   String?
  icon_currency_url  String?
  rpc_url            String
  rpc_url_backup     String?
  chain_id           Int
  currency_symbol    String?
  block_explorer_url String?
  contract           contract[]
}
